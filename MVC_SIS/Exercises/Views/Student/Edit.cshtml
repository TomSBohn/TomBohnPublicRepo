@using Exercises.Models.Data
@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-3">
        @Html.Partial("StudentNav")
    </div>
        <h3>Edit Student</h3>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false, "", new { @style = "color: red" })

                @Html.HiddenFor(s => s.Student.StudentId)
                <div class="col-xs-12 col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">Personal Details</h4>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label>First Name:</label>
                                @Html.TextBoxFor(m => m.Student.FirstName, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Last Name:</label>
                                @Html.TextBoxFor(m => m.Student.LastName, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Major:</label>
                                @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>GPA:</label>
                                @Html.EditorFor(m => m.Student.GPA, new {@class = "form-control"})
                            </div>
                            <label>Courses:</label>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.SelectedCourseIds, Model.CourseItems, new {@class = "form-control"})
                            </div>
                        </div>
                    </div>
                </div>
            <div class="row">
                <div class="col-xs-12 col-sm-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4 class="panel-title">Address</h4>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label>Street:</label>
                                @Html.TextBoxFor(m => m.Student.Address.Street1, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Street Continued:</label>
                                @Html.TextBoxFor(m => m.Student.Address.Street2, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>City:</label>
                                @Html.TextBoxFor(m => m.Student.Address.City, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>State:</label>
                                @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new {@class = "form-control"})
                            </div>
                            <div>
                                <label>Postal Code:</label>
                                @Html.TextBoxFor(m => m.Student.Address.PostalCode, new {@class = "form-control"})
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <center>
                <button class="btn btn-primary">Save Your Changes</button>
            </center>
        }
   </div>


@section scripts
{
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}