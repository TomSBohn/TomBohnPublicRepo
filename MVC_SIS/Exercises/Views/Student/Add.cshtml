@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Add Student</h3>

                <div class="row">
                    @using (Html.BeginForm("Add", "Student", null, FormMethod.Post, new { id = "addStudent" }))
                    {
                        //You can add styling to your validationSummary
                        @Html.ValidationSummary(false, "", new { @style = "color: red" })

                        <div class="col-xs-12 col-sm-4">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new {@class = "form-control"})
                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.EditorFor(m => m.Student.GPA, new {@class = "form-control"})
                                    </div>
                                    <label>Courses:</label>
                                    <div class="form-group">
                                        @Html.DropDownListFor(m => m.SelectedCourseIds, Model.CourseItems, new {@class = "form-control"})
                                    </div>
                                </div>
                            </div>
                        </div>
                                <button class="btn btn-primary">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}